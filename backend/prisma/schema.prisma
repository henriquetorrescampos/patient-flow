generator client {
  provider = "prisma-client-js"
    binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AreaType {
  FONO
  TO
  PSICO
  PSICOPEDAGOGIA
}

model Patient {
  id         Int        @id @default(autoincrement())
  name       String
  phone      String?
  planoSaude String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  checkboxes Checkbox[]
  histories History[]

  @@map("patients")
}

model Checkbox {
  id             Int       @id @default(autoincrement())
  patientId      Int
  area           AreaType
  checkboxNumber Int       // 1-8
  isChecked      Boolean   @default(false)
  checkedDate    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  patient        Patient   @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@unique([patientId, area, checkboxNumber])

  @@map("checkboxes")
}

model History {
  id                 Int      @id @default(autoincrement())
  patientId          Int
  area               String   
  checkboxes         String   
  sessionsCompleted  Int      
  savedAt            DateTime @default(now())
  createdAt          DateTime @default(now())
  
  patient            Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
  @@index([patientId])
  @@index([area])
  @@map("histories")
}